{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "outDir": ".tmp",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": [
      "mocha",
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "src/**/*.test.ts",
    "dist"
  ],
  "include": [
    "src/**/*"
  ]
}
